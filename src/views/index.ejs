              <p class="categorie-title">
                <%= categorie.title %>
              </p>
            </div>
          </div>
          <% } %>

      </div>
      <div id="categories-nav">
        <a href="/categories/new">Hozzáad</a>
        <a href="/categories">Összes</a>
      </div>
    </div>









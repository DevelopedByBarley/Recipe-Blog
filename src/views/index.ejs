<body>
  <div id="index-container">



    


    <div class="latestRecipe-title">
      <h1>Legutóbbi receptek</h1>
      <hr>
    </div>

    <div class="latestContainer">
      <% for(let recipe of latestRecipes) {%>
        <div class="latestRecipes">
          <img src="images/<%= recipe.coverImageName %>" alt="">
          
          <h2>
            <%= recipe.title %>
          </h2>
          <div class="latestRecipes-description">
            <p>
              <span><i class="fa-regular fa-lg fa-clock"></i></span>
              <%=recipe.fullTime %>
            </p>
            <p>
              <span><i class="fa-solid fa-lg fa-dumbbell"></i></span>
              <%=recipe.difficult %>
            </p>
            <p>
              <span><i class="fa-solid fa-lg fa-people-group"></i></span>
              <%=recipe.portion %>
            </p>
            <p>
              <span><i class="fa-solid fa-lg fa-dollar-sign"></i></span>
              <%=recipe.cost %>
            </p>
          </div>
        </div>
        <% } %>
    </div>


    <div class="random-recipe-header">
      <h1>Meglepetés recept</h1>
    </div>
    <div class="random-recipe">
      <img src="images/<%= randomRecipe[0].coverImageName %> " alt="">
      <div class="random-recipe-description-container">
        <h1><%= randomRecipe[0].title %></h1>
        <p>
          <span><i class="fa-solid fa-people-group"></i></span>
          <%= randomRecipe[0].portion %></p>
        <p> 
          <span><i class="fa-regular fa fa-clock"></i></span> 
          <%= randomRecipe[0].fullTime %>min</p>
        <p>
          <span><i class="fa-solid fa fa-comment"></i></span>
          <%= randomRecipe[0].comment %>
        </p>
        <a href="#" id="check-random">Megtekint</a>

      </div>
    </div>









    <div id="allRecipes-section">
      <div id="allRecipes">
        <h1>Összes Recept</h1>
        <hr>
        <div id="allRecipes-nav">
          <a href="/recipes" id="allRecipes">Tovább </a>
          <a href="/recipes/new" id="addRecipe">Adj hozzá</a>
        </div>
      </div>
    </div>












    <div id="categories-section">
      <div id="categorie-title">
        <h1>Kategóriák</h1>
        <hr>
      </div>

      <div id="categories">
